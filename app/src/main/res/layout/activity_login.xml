<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple"
    android:padding="10dp"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/kullaniciadi2"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:hint="Kullanıcı Adı"
        app:layout_constraintBottom_toTopOf="@+id/parola3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/parola3"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/kullaniciadi2"
        android:layout_marginBottom="28dp"
        android:hint="Parola"
        app:layout_constraintBottom_toTopOf="@+id/giris2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/giris2"
        android:layout_width="248dp"
        android:layout_height="70dp"
        android:layout_below="@+id/parola3"
        android:layout_marginTop="52dp"
        android:backgroundTint="@color/siyah"
        android:text="Giriş Yap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/parola3" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="125dp"
        android:layout_marginBottom="83dp"
        app:layout_constraintBottom_toTopOf="@+id/kullaniciadi2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/baseline_person_24" />

</androidx.constraintlayout.widget.ConstraintLayout>